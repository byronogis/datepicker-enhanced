{
  "name": "@datepicker-enhanced/monorepo",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "pnpm run -r dev",
    "build": "pnpm run -r build",
    "root:lint": "eslint .",
    "root:lint:fix": "eslint . --fix",
    "typecheck": "pnpm run -r typecheck",
    "test": "vitest",
    "release": "pnpm run automd && bumpp -r",
    "automd": "pnpm run -r automd",
    "update": "npx taze -r -I latest",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@types/node": "^25.0.3",
    "@vitest/browser-playwright": "^4.0.16",
    "automd": "^0.4.3",
    "bumpp": "^10.4.1",
    "datepicker-enhanced": "workspace:*",
    "dayjs": "^1.11.19",
    "eslint": "^9.39.2",
    "eslint-flat-config-utils": "^3.0.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "rimraf": "^6.1.2",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.18.1",
    "typescript": "^5.9.3",
    "unplugin-vue": "^7.1.1",
    "vite": "^7.3.1",
    "vite-plugin-vue-devtools": "^8.0.6",
    "vitest": "^4.0.18",
    "vitest-browser-vue": "^2.0.1",
    "vue": "^3.5.25",
    "vue-component-type-helpers": "^3.2.4",
    "vue-tsc": "^3.1.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
